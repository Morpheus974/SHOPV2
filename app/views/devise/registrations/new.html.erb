<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :firstname,'Votre prénom :' %><br />
    <%= f.text_field :firstname, autofocus: true, autocomplete: "Prénom" %>
  </div>

    <div class="field">
    <%= f.label :lastname,'Votre nom :' %><br />
    <%= f.text_field :lastname, autofocus: true, autocomplete: "Nom" %>
  </div>

  <div class="field">
    <%= f.label :email,'Votre email :' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,'Votre mot de passe :' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,'Confirmez votre mot de passe :' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :streetnumber,'Numéro dans la rue :' %><br />
    <%= f.text_field :streetnumber, autofocus: true, autocomplete: "Numéro" %>
  </div>

  <div class="field">
    <%= f.label :streetname,'Nom de rue:' %><br />
    <%= f.text_field :streetname, autofocus: true, autocomplete: "Rue" %>
  </div>


  <div class="field">
    <%= f.label :postalcode,'Code postal :' %><br />
    <%= f.text_field :postalcode, autofocus: true, autocomplete: "Code Postal" %>
  </div>


  <div class="field">
    <%= f.label :city,'Ville:' %><br />
    <%= f.text_field :city, autofocus: true, autocomplete: "Ville" %>
  </div>

  <div class="field">
    <%= f.label :phonenumber,'Votre numéro de téléphone:' %><br />
    <%= f.text_field :phonenumber, autofocus: true, autocomplete: "Numéro de téléphone" %>
  </div>

<br>
  <div class="actions">
    <%= f.submit "S'incrire" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>
