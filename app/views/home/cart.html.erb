<section class="content-page">
    <div class="container mb-80">
        <div class="row">
            <div class="col-sm-12">
                <article class="post-8">
                    <form class="cart-form" action="#" method="post">
                        <div class="cart-product-table-wrap responsive-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-name">Produit</th>
                                        <th class="product-price">Prix</th>
                                        <th class="product-quantity">Quantit√©</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                
                                <tbody>

                        
                         <% @shopping_cart.product.each do |product| %>
                                    <tr>
                                       <td class="product-name">
                                            <a><%=shopping_cart_item.item_id%></a>
                                        </td>
                                        <td class="product-price">
                                            <span class="product-price-amount amount"><span class="currency-sign">$</span><%=shopping_cart_item.price_cents%></span>
                                        </td>
                                        <td>
                                            <div class="product-quantity">

                                                <input class="quantity input-lg" step="1" min="1" max="9" name="quantity" value="1" title="Quantity" type="number" />

                                            </div>
                                        </td>
                                        <td class="product-subtotal">
                                            <span class="product-price-sub_totle amount"><span class="currency-sign">$</span><%=shopping_cart_item.price_cents%></span>
                                        </td>
                                    </tr>
                            
                            <%end%>
                                </tbody>
                            </table>
                        </div>
                    </form>
                    <div class="cart-collateral">
                        <div class="cart_totals">
                            <h3>Total</h3>
                                    <tbody>
                                        <tr class="order-total">
                                            <th>Total</th>
                                            <td><span class="product-price-amount amount"><span class="currency-sign">$</span><%=@totalcart%></span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="product-proceed-to-checkout">

                            <%= form_tag orders_new_path do %>
                              <article>
                                <% if flash[:error].present? %>
                                  <div id="error_explanation">
                                    <p><%= flash[:error] %></p>
                                  </div>
                                <% end %>
                                
                              </article>

                              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                                      data-description="Your order"
                                      data-amount="<%= @totalcart*100 %>"
                                      data-currency="usd"
                                      data-locale="auto"><
                                </script>
                            <% end %>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>

</section>

